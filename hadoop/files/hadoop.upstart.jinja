
description "Hadoop {{ hadoop_svc }}"

start on runlevel [2345]
stop on [!12345] 

respawn
respawn limit 2 5

task

console log

script
{%- if hadoop_major == '1' %}
    exec {{ hadoop_home }}/bin/hadoop-daemon.sh start {{ hadoop_svc }}
{%- else %}
    exec {{ hadoop_home }}/sbin/hadoop-daemon.sh start {{ hadoop_svc }}
{% endif %}
end script

